{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost, with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9000",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Attach to Chrome, with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Launch Edge against localhost, with sourcemaps",
      "type": "edge",
      "request": "launch",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceRoot}",
      "sourceMaps": true
    },
    {
      "name": "Attach to Edge, with sourcemaps",
      "type": "edge",
      "request": "attach",
      "url": "http://localhost:9000", // optional: used to find the right tab running in Edge
      "port": 9222,
      "sourceMaps": true
    }
  ]
}